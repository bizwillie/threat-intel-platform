# Database Configuration
DATABASE_URL=postgresql://utip:utip_password@postgres:5432/utip

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Keycloak Configuration
KEYCLOAK_URL=http://keycloak:8080
KEYCLOAK_REALM=utip
KEYCLOAK_CLIENT_ID=utip-api
KEYCLOAK_CLIENT_SECRET=your-client-secret-here

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Environment
ENVIRONMENT=development
DEBUG=True

# Phase 2.5 Feature Flags
# Enable/disable optional enhancements for vulnerability pipeline
ENABLE_NVD_API=true                    # Query NVD API for live CVE data (requires internet)
ENABLE_CAPEC_DATABASE=false            # Use full CAPEC database for CWEâ†’Technique mappings
ENABLE_ATTACK_STIX_VALIDATION=false    # Validate techniques against ATT&CK STIX data
ENABLE_REDIS_CACHE=false               # Use Redis for persistent CVE cache (instead of in-memory)
ENABLE_EXTENDED_CWE_MAPPINGS=false     # Use 400+ CWE mappings (vs. core 15)

# NVD API Configuration (if ENABLE_NVD_API=true)
NVD_API_KEY=                           # Optional: Increases rate limit from 5 to 50 req/30s
NVD_API_TIMEOUT=10                     # Request timeout in seconds
NVD_API_CACHE_TTL=604800               # Cache TTL in seconds (default: 7 days)

# CAPEC Database Configuration (if ENABLE_CAPEC_DATABASE=true)
CAPEC_DATA_PATH=/app/data/capec.json   # Path to CAPEC JSON data file

# ATT&CK STIX Configuration (if ENABLE_ATTACK_STIX_VALIDATION=true)
ATTACK_STIX_PATH=/app/data/enterprise-attack.json  # Path to ATT&CK STIX bundle

# Ollama Configuration (Phase 4 - Future)
OLLAMA_URL=https://your-ollama-instance.com
OLLAMA_API_KEY=your-ollama-api-key
